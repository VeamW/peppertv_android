<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/home_page_top_back"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/space_250"
                  android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_50"
            >

            <LinearLayout
                android:id="@+id/top_back"
                android:layout_width="@dimen/space_80"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/space_10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chat_back"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_home_page_uname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="美食家"
                android:textColor="@color/white"/>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            >
            <!--头像-->
            <com.weilian.phonelive.widget.AvatarView
                android:id="@+id/av_home_page_uhead"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_home_page_num"
                    style="@style/home_user_info_item_content"
                    android:text="ID:"
                    />

                <ImageView
                    android:id="@+id/iv_home_page_sex"
                    style="@style/live_sex_style"
                    android:layout_marginLeft="12dp"/>

                <ImageView
                    android:id="@+id/iv_home_page_level"
                    style="@style/live_level_style"
                    android:layout_marginLeft="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <!--顶部钻石-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_home_page_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/global_back"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/me_harvest_exchange"/>

                        <TextView
                            android:id="@+id/tv_home_page_send_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_15"/>
                    </LinearLayout>

                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_home_page_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="签名签名"
                    android:textColor="@color/white"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:padding="@dimen/space_10"
                            android:id="@+id/tv_home_page_follow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关注 0"
                            android:textColor="@color/white"/>

                        <TextView
                            android:padding="@dimen/space_10"
                            android:id="@+id/tv_home_page_fans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:text="粉丝 0"
                            android:textColor="@color/white"/>
                    </LinearLayout>


                </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</merge>