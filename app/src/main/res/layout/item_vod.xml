<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/space_2">

    <ImageView
        android:id="@+id/item_vod_img"
        android:layout_width="@dimen/space_100"
        android:layout_height="@dimen/space_100"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:background="@drawable/default_background"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_100"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/item_vod_img"
        android:paddingLeft="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:padding="@dimen/space_4">

            <TextView
                android:id="@+id/item_vod_time_visited"
                style="@style/item_vod_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/txt_visit_time_drawable"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/item_vod_time_post"
                style="@style/item_vod_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/item_vod_visit_count"
                style="@style/item_vod_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/txt_item_vod_visit_count"
                android:singleLine="true"
                android:textColor="@color/white"/>

        </LinearLayout>


        <TextView
            android:id="@+id/item_vod_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:maxLength="50"
            android:padding="@dimen/space_2"
            android:text="那一刻，他心动了500年"/>


    </RelativeLayout>


</RelativeLayout>