<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root">
    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/iv_select_login_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/ll_login_select"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:text="请选择登录方式"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/ll_login_select"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_qqlogin"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:src="@drawable/icon_def_qq"/>
        <ImageView
            android:id="@+id/iv_sllogin"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:src="@drawable/icon_def_xl"/>
        <ImageView
            android:id="@+id/iv_wxlogin"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:src="@drawable/icon_def_wx"/>
        <ImageView
            android:id="@+id/iv_mblogin"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:src="@drawable/icon_def_phone"/>

    </LinearLayout>

</RelativeLayout>