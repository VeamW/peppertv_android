<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.weilian.phonelive.widget.LoadUrlImageView
        android:id="@+id/av_edit_head"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_avator_from_album"
            android:textColor="@color/white"
            android:text="@string/selectphotoonalbu"
            android:background="@drawable/background_global_btn"
            android:layout_width="300dp"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/btn_avator_photograph"
            android:textColor="@color/white"
            android:text="@string/selectphotooncamera"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_global_btn"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/iv_select_avatar_back"
        android:layout_marginTop="30dp"
        android:src="@drawable/img_room_chat_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>